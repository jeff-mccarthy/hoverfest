{
  "manifest_version": 2,

  "name": "Hoverfest",
  "description": "Test extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ],
  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "css": ["assets/css/main.css"],
    "js": ["assets/js/vendor/jquery-2.2.4.min.js", "assets/js/contentScript.js"],
    "run_at": "document_end",
    "all_frames": true
  }]
}
